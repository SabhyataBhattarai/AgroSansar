@{
    ViewData["Title"] = ViewData["Title"] ?? "AgroSansar";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgroSansar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgroSansar.styles.css" asp-append-version="true" />
    <style>
        /* Navbar tweaks */
        .navbar {
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        .navbar-nav .nav-link {
            transition: color 0.3s, transform 0.3s;
            margin-left: 1rem;
        }

            .navbar-nav .nav-link:hover {
                color: #d4edda;
                transform: scale(1.05);
            }

        /* Footer tweaks */
        footer {
            background-color: #15803d;
            padding: 0.75rem 0;
            font-size: 0.9rem;
        }

        /* Ensure main content stretches nicely */
        main.container {
            max-width: 1200px;
            margin: auto;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-success shadow-sm">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Brand left -->
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">AgroSansar</a>

                <!-- Nav links right -->
                <ul class="navbar-nav d-flex flex-row">
                  
                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold hover-underline" asp-area="" asp-controller="Weather" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold hover-underline" asp-area="" asp-controller="Chatbot" asp-action="Ask">Crop Advisory</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold hover-underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-white text-center">
        &copy; 2025 - AgroSansar - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
